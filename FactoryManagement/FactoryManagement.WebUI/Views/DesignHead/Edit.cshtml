
@{
    ViewBag.Title = "Edit";
}

<div class="col-12">
    <div class="card">
        <form>
            <div class="card-header">
                <h6 class="pt-3">ADD DESIGN HEAD</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-4">
                        <div class="form-group">
                            <input type="text" hidden id="txtdesigid" >
                            <label>Design Title<span style="color:red"> *</span></label>
                            <input type="text" id="DesignTitle" class="form-control form-control-sm">
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Description </label>
                            <input type="text" id="Description" class="form-control form-control-sm">
                        </div>
                    </div>
                    <div class="form-group col-4">
                        <label class="d-block">IsActive</label>
                        <div class="form-check pt-2">
                            <input class="form-check-input" type="checkbox" checked="checked" id="defaultCheck1">
                            <label class="form-check-label" for="defaultCheck1">
                                Active
                            </label>
                        </div>

                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label>Size</label>
                            <select id="ddlsize" class="form-control">
                            </select>
                        </div>
                    </div>
                    <div class="col-4 mt-4" style="padding-top:9px;">
                        <button class="btn btn-info" type="button" style="width:145px;" id="btnAddSize" onclick="AddSize()">Add Size</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6 col-lg-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-md">
                                        <tr>
                                            <th>#</th>
                                            <th colspan="3">Size</th>
                                            <th style="text-align:center"> Action</th>
                                        </tr>
                                        <tr>
                                            <td>1</td>
                                            <td colspan="3">Irwansyah Saputra</td>
                                            <td style="text-align:center"><button  class="btn btn-danger">Delete</button></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-right">
                    <button class="btn btn-primary" type="button" id="btnSaveRole" onclick="btnSave()">Save Data</button>
                    <button class="btn btn-secondary" type="button" id="btnclose" onclick="btnclosee()">Close</button>
                </div>
        </form>
    </div>
</div>

@section scripts{
    <script src="~/Content/Pages/DesignHead/DesignHeadEdit.js"></script>
}  