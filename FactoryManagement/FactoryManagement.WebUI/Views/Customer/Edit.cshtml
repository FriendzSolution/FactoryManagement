
@{
    ViewBag.Title = "Edit";
}
<div class="col-12">
    <div class="card">
        <form>
            <div class="card-header">
                <h6 class="pt-3">ADD NEW CUSTOMER</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-4">
                        <div class="form-group">
                            <label>Customer Title<span style="color:red"> *</span></label>
                            <input type="text" id="txtCustomerTitle" class="form-control form-control-sm">
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Customer CNIC<span style="color:red"> *</span></label>
                            <input type="text" id="txtCustomerCnic" class="form-control form-control-sm">
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Phone Number<span style="color:red"> *</span></label>
                            <input type="text" id="txtPhoneNumber" class="form-control form-control-sm">
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>WhatsApp Number<span style="color:red"> *</span></label>
                            <input type="text" id="txtWhatsAppNumber" class="form-control form-control-sm">
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Email<span style="color:red"> *</span></label>
                            <input type="email" id="txtemail" class="form-control form-control-sm">
                        </div>
                    </div>
                    <div class="form-group col-2">
                        <label class="d-block">IsActive</label>
                        <div class="form-check pt-2">
                            <input class="form-check-input" type="checkbox" checked="checked" id="defaultCheck1">
                            <label class="form-check-label" for="defaultCheck1">
                                Active
                            </label>
                        </div>
                    </div>
                    <div class="form-group col-2">
                        <label class="d-block">IsCreditAllowed</label>
                        <div class="form-check pt-2">
                            <input class="form-check-input" type="checkbox" checked="checked" id="chkIsCreditAllowed">
                            <label class="form-check-label" for="chkIsCreditAllowed">
                                IsCreditAllowed
                            </label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <label>Address<span style="color:red"> *</span></label>
                            <input type="text" id="txtAddress" class="form-control form-control-sm">
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-right">
                <button class="btn btn-primary" type="button" id="btnSaveCustomer" onclick="btnSave()">Save Data</button>
                <button class="btn btn-secondary" type="button" id="btnclose" onclick="btnclosee()">Close</button>
            </div>
        </form>
    </div>
</div>

@section scripts{
    <script src="~/Content/Pages/Customer/CustomerEdit.js"></script>
}   