
@{
    ViewBag.Title = "View Item";
}

<div class="card card-secondary">
    <div class="row">
        <div class="col-12">

            <div class="card-header">
                <h4>VIEW ITEM </h4>
                <div class="card-header-action">
                    <button class="btn btn-info btn-icon icon-left" id="btnNewadd" onclick="btnNewadd();">Add New</button>
                    <button class="btn btn-info btn-icon icon-left">Refresh</button>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped" id="SupplierTable1">
                        <thead>
                            <tr>
                                <th>
                                    S.no
                                </th>
                                <th>Status</th>
                                <th>Supplier Name</th>
                                <th>Contact No</th>
                                <th>Whatsapp No</th>
                                <th>Business Address</th>
                                <th>Action</th>
                            </tr>
                            <tr class="text-white filters">
                                <th class="text-white"></th>
                                <th class="text-white"><select><option value=""></option><option value="Yes">Yes</option><option value="No">No</option></select></th>
                                <th class="text-white"><input type="text" placeholder="Search Supplier Name" style="width:100%;" class="form-control" /></th>
                                <th class="text-white"><input type="text" placeholder="Search Contact No" style="width:100%;" class="form-control" /></th>
                                <th class="text-white"><input type="text" placeholder="Search Whatsapp No" style="width:100%;" class="form-control" /></th>
                                <th class="text-white"><input type="text" placeholder="Search Business Address" style="width:100%;" class="form-control" /></th>
                                <th class="text-white"></th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

